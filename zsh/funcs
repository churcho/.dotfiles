#!/usr/bin/env zsh

ga() { git add "$@"; }
gc() { git commit "$@"; }
gcb() { git checkout -b "$@"; }
gco() { git checkout "$@"; }
gcm() { git checkout master; }
gl() { git log --graph "$@"; }
gpull() { git pull "$@"; }
gpush() { git push "$@"; }
gd() { git diff "$@"; }
gs() { git status "$@"; }
path() {
  echo $PATH | sed 's/:/\
/g'
}

fv() {
  file="$(fzf)"
  case "$file" in
    "") echo "fv cancelled";;
    *) vim "$file";;
  esac
}

fmv() {
  file="$(fzf)"
  case "$file" in
    "") echo "fv cancelled";;
    *) mvim "$file";;
  esac
}

aliases() {
  if [ -f ~/.zsh/aliases ]; then
    cat ~/.zsh/aliases
  fi

  if [ -f ~/.zsh/aliases.local ]; then
    cat ~/.zsh/aliases.local
  fi
}

routes() {
  case "$#" in
    0) bin/rails routes;;
    *) bin/rails routes | ag "$@";;
  esac
}
